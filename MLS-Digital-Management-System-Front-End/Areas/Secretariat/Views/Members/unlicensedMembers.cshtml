@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Members";
    Layout = "~/Areas/Secretariat/Views/shared/_Layout.cshtml";
    var host = Configuration.GetSection("APIURL")["Link"];
}

<div>
    <img src="~/assets/images/91.gif" id="spinner" />
</div>

<div class="card">
    <div class="card-body">
        <div class="justify-content-between d-flex">
            <h5 class="card-title fw-semibold mb-4 text-uppercase">Unlicensed Members</h5>

            <div class="mb-4">
                <a asp-action="Index" asp-area="secretariat" asp-controller="Members"
                    class="btn btn-primary my-3 mx-1">All</a>
                <a asp-action="LicensedMembers" asp-area="secretariat" asp-controller="Members"
                    class="btn btn-success my-3 ">Licensed</a>
                <button type="button" class="btn btn-warning my-3 mx-2"
                        onclick="markAsLicensed()">Mark As Licensed</button>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered " id="members_table">
                <thead>
                    <tr>
                        <th>

                        </th>
                        <th>
                            First Name
                        </th>
                        <th>
                            Surname
                        </th>
                        <th>
                            Gender
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Contact
                        </th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {

    <script>
        var datatable;
        var tokenValue = '@ViewBag.token';
        var host = '@host';
    </script>

    <script src="~/js/Member.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            datatable = $('#members_table').DataTable({


                "processing": true,
                "serverSide": true,
                "order": [[0, "desc"]],
                ajax: {
                    url: `${host}/api/Members/getUnlicensedMembers`,
                    type: 'get',
                    datatype: 'Json',
                    headers: {
                        'Authorization': 'Bearer @ViewBag.token'
                    }

                },
                columnDefs: [
                    {
                        defaultContent: "",
                        targets: "_all",
                        'orderable': true
                    },
                ],
                columns: [
                    {
                        data: "userId",
                        name: "userId",
                        className: "text-center",
                        orderable: false,
                        defaultContent: "",
                        render: function (data, type, row) {
                            return `<input type="checkbox" class="memberCheckbox" data-id="${row.userId}">`;
                        }
                    },
                    {
                        data: "user.firstName",
                        name: "user",
                        className: "text-left",
                        "orderable": true,
                    },
                    {
                        data: "user.lastName",
                        name: "user",
                        className: "text-left",
                        "orderable": true,
                    },
                    {
                        data: "user.gender",
                        name: "user",
                        className: "text-left",
                        "orderable": true,
                    },
                    {
                        data: "user.email",
                        name: "user",
                        className: "text-left",
                        "orderable": true,
                    },
                    {
                        data: "user.phoneNumber",
                        name: "user",
                        className: "text-left",
                        "orderable": true,
                    },
                ],
                responsive: true,
                "autoWidth": false,
            });
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}