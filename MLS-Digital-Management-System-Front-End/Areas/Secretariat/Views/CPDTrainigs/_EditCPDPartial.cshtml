@model MLS_Digital_Management_System_Front_End.Core.DTOs.CPDTraining.UpdateCPDTrainingDTO
<!-- Modal -->
<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">Update CPD Training</h5>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
       <form asp-action="Create">
        <input type="hidden" asp-for="Id"/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3 form-check">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" placeholder="Enter Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3 form-check">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="mb-3 form-check">
                    <label asp-for="Duration" class="control-label"></label>
                    <input asp-for="Duration" placeholder="Enter Duration" class="form-control" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3 form-check">
                    <label asp-for="DateToBeConducted" class="control-label"></label>
                    <input asp-for="DateToBeConducted" type="date" class="form-control" />
                    <span asp-validation-for="DateToBeConducted" class="text-danger"></span>
                </div>
            </div>
           
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="mb-3 form-check">
                    <label asp-for="CPDUnitsAwarded" class="control-label"></label>
                    <input asp-for="CPDUnitsAwarded" placeholder="Enter Units Awarded" class="form-control" />
                    <span asp-validation-for="CPDUnitsAwarded" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3 form-check">
                    <label asp-for="AccreditingInstitution" class="control-label"></label>
                    <input asp-for="AccreditingInstitution" placeholder="Enter Accrediting Institution" class="form-control" />
                    <span asp-validation-for="AccreditingInstitution" class="text-danger"></span>
                </div>
            </div>
           
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="mb-3 form-check">
                    <label class="control-label">Attachments</label>
                    <div class="custom-file">
                        <input multiple class="form-control custom-file-input" id="Attachments" accept="image/*" name="Attachments" type="file">
                        <label class="custom-file-label" for="Attachments">Choose file</label>
                    </div>
                </div>
            </div>
        </div>
       </form>
    </div>
     <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      <button type="button" class="btn btn-warning" name="update_cpd_btn" id="update_cpd_btn">Update CPD</button>
     
    </div>
  </div>
</div>