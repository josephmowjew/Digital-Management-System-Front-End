@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/CEO/Views/shared/_Layout.cshtml";
     var host = Configuration.GetSection("APIURL")["Link"];
}



<div class="card">
    <div class="card-body">
        <a asp-action="Index" asp-area="ceo" asp-controller="Users" class="btn btn-success my-3 mx-1">View Active Users</a>
         <a asp-action="UnconfirmedUsers" asp-area="ceo" asp-controller="Users" class="btn btn-warning my-3 mx-1">View Unconfirmed Users</a>
          <a asp-action="MembersWithMissingRecords" asp-area="ceo" asp-controller="Users" class="btn btn-primary my-3 mx-1">Members Missing Records</a>

        <h5 class="card-title fw-semibold mb-4 text-uppercase">Suspended Users</h5>
       
        <div class="table-responsive">
            <table class="table table-bordered " id="my_table">
                <thead>
                    <tr>
                        <th>
                            First Name
                        </th>
                        <th>
                            Surname
                        </th>
                        <th>
                            Gender
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Contact
                        </th>
                        <th>
                            Role
                        </th>

                        <th>
                            Date Added
                        </th>

                        <th>
                            Date Suspended
                        </th>

                        <th>
                            Action
                        </th>

                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>


       @section Scripts{

        <script>
            var datatable;
            var tokenValue = '@ViewBag.token';
            var host = '@host';
            
        </script>

        <script src="~/js/User.js" asp-append-version="true"></script>
        <script>
            $(document).ready(function () {
                datatable = $('#my_table').DataTable({


                    "processing": true,
                    "serverSide": true,
                    "order": [[0, "desc"]],
                    ajax: {
                    url: '@host/api/Users/suspended',
                        type: 'get',
                        datatype: 'Json',headers: {
                                        'Authorization': 'Bearer @ViewBag.token'
                                    }

                  },
                    columnDefs: [
                        {
                            defaultContent: "",
                            targets: "_all",
                            'orderable': true
                        },
                    ],
                    columns: [
                        {
                            data: "firstName",
                            name: "firstName",
                            className: "text-left",
                            "orderable": true,
                        },
                        {
                            data: "lastName",
                            name: "lastName",
                            className: "text-left",
                            "orderable": true,
                        },
                        {
                            data: "gender",
                            name: "gender",
                            className: "text-left",
                            "orderable": true,
                        },
                        {
                            data: "email",
                            name: "email",
                            className: "text-left",
                            "orderable": true,
                        },
                        {
                            data: "phoneNumber",
                            name: "contact",
                            className: "text-left",
                            "orderable": true,
                        },
                         {
                            data: "roleName",
                            name: "role",
                            className: "text-left",
                            "orderable": true,
                        },

                        
                         {
                            data: "createdDate",
                            name: "createdDate",
                            className: "text-left",
                            "orderable": true,
                        },
                        {
                            data: "lastLogin",
                            name: "lastLogin",
                            className: "text-left",
                            "orderable": true,
                        },
                        {
                            data: "id",
                            name: "id",
                            "orderable": false,
                            render: function (data) {
                                return "<a href='#' onclick='Reactivate(\"" + data + "\",\"" + tokenValue + "\")' type='button' class='ti ti-check btn btn-outline-primary' title='activate'> Reactivate</a> "
                            }                     }
                    ],
                    responsive: true,
                    "autoWidth": false,
                });
            });
        </script>

            @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        }