@model MLS_Digital_Management_System_Front_End.Core.DTOs.ProBonoReport.CreateProBonoReportDTO

<!-- Modal -->
<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">Create Pro Bono Report</h5>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
      <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="ProBonoId" type="hidden" />
        <div class="row row-cols-lg-1">
          

          <div class="mb-3">
            <label asp-for="ProBonoProposedHours" class="form-label"></label>
            <input asp-for="ProBonoProposedHours" type="number" step="0.01" placeholder="Enter Report Proposed Hours" class="form-control" />
            <span asp-validation-for="ProBonoProposedHours" class="text-danger"></span>
          </div>

          <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" placeholder="Enter Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
          </div>

          <div class="mb-3">
            <label asp-for="Attachments" class="form-label"></label>
            <input asp-for="Attachments" type="file" multiple class="form-control" />
            <span asp-validation-for="Attachments" class="text-danger"></span>
          </div>

        </div>
      </form>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      <button type="button" class="btn btn-primary" name="create_probono_report_btn" id="create_probono_report_btn">Create Pro Bono Report</button>
     
    </div>
  </div>
</div>

