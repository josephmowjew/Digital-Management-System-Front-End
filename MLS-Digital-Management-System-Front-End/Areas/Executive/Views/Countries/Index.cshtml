@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Countries";
    Layout = "~/Areas/Executive/Views/shared/_Layout.cshtml";

     var host = Configuration.GetSection("APIURL")["Link"];
}



<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4 text-uppercase">Available Countries</h5>
       
        <div class="table-responsive">
            <table class="table table-bordered " id="my_table">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Short Code
                        </th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>


       @section Scripts{

        <script>
            var datatable;
            var tokenValue = '@ViewBag.token';
            var host = '@host';
        </script>

        <script src="~/js/Country.js" asp-append-version="true"></script>
        <script>
            $(document).ready(function () {
                datatable = $('#my_table').DataTable({


                    "processing": true,
                    "serverSide": true,
                    "order": [[0, "desc"]],
                    ajax: {
                    url: "@host/api/Countries/paged",
                        type: 'get',
                        datatype: 'Json',headers: {
                                        'Authorization': 'Bearer @ViewBag.token'
                                    }
                      
                  },
                    columnDefs: [
                        {
                            defaultContent: "",
                            targets: "_all",
                            'orderable': true
                        },
                    ],
                    columns: [
                        {
                            data: "name",
                            name: "name",
                            className: "text-left",
                            "orderable": true,
                        },                      
                        {
                            data: "shortCode",
                            name: "shortCode",
                            className: "text-left",
                            "orderable": true,
                        },
                        
                    ],
                    responsive: true,
                    "autoWidth": false,
                });
            });
        </script>

            @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        }