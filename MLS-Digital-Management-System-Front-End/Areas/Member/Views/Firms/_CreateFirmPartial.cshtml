@model MLS_Digital_Management_System_Front_End.Core.DTOs.Firm.CreateFirmDTO;
<!-- Modal -->


<div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create Firm</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DataInvalid" />
                <div class="row row-cols-lg-1">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" placeholder="Enter Firm Name" class="form-control" /> 
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row row-cols-lg-2">
                    <div class="mb-3">
                        <label asp-for="PrimaryContactPerson" class="form-label"></label>
                        <input asp-for="PrimaryContactPerson" class="form-control" value="@ViewBag.member?.User.FullName" readonly/>
                        <span asp-validation-for="PrimaryContactPerson" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PrimaryPhoneNumber" class="form-label"></label>
                        <input asp-for="PrimaryPhoneNumber" class="form-control" value="@ViewBag.member.User.PhoneNumber" readonly />
                        <span asp-validation-for="PrimaryPhoneNumber" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="SecondaryContactPerson" class="form-label"></label>
                        <select asp-for="SecondaryContactPerson" asp-items="@ViewBag.membersList" class="form-control"></select>
                        <span asp-validation-for="SecondaryContactPerson" class="text-danger"></span>
                    </div>
              
                   
                    <div class="mb-3">
                        <label asp-for="SecondaryPhoneNumber" class="form-label"></label>
                        <input asp-for="SecondaryPhoneNumber" class="form-control" placeholder="Enter Secondary Phone Number" />
                        <span asp-validation-for="SecondaryPhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PhysicalAddress" class="form-label"></label>
                        <input asp-for="PhysicalAddress" class="form-control" placeholder="Enter Physical Address" />
                        <span asp-validation-for="PhysicalAddress" class="text-danger"></span>
                    </div>
                  
                    <div class="mb-3">
                        <label asp-for="PostalAddress" class="form-label"></label>
                        <input asp-for="PostalAddress" class="form-control" placeholder="Enter Postal Address" />
                        <span asp-validation-for="PostalAddress" class="text-danger"></span>
                    </div>
                   
                </div>
        </form>
      </div>
      <div class="modal-footer">
         <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" id="create_firm_btn" name="create_firm_btn">Create Firm</button>
           
      </div>
    </div>
  </div>

