@model MLS_Digital_Management_System_Front_End.Core.DTOs.Country.CreateCountryDTO;
<!-- Modal -->


<div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create Country</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DataInvalid" />
                <div class="row row-cols-lg-1">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" placeholder="Enter Country Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ShortCode" class="form-label"></label>
                        <input asp-for="ShortCode" placeholder="Enter Short Code" class="form-control" />
                        <span asp-validation-for="ShortCode" class="text-danger"></span>
                    </div>
                   
                </div>
        </form>
      </div>
      <div class="modal-footer">
         <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" id="create_country_btn" name="create_country_btn">Create Country</button>
            <div>
                <img src="~/assets/images/91.gif" id="spinner" />
            </div>
      </div>
    </div>
  </div>

