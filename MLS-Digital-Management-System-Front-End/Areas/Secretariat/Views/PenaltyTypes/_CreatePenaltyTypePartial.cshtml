@model MLS_Digital_Management_System_Front_End.Core.DTOs.PenaltyType.CreatePenaltyTypeDTO;
<!-- Modal -->
<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">Create Penalty</h5>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
       <form asp-action="Create">
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="row">
                <div class="col-md-6">
                    <div class="mb-3 form-check">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" placeholder="Enter Reason" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3 form-check">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" placeholder="Enter description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            
           </div>
       </form>
    </div>

     <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" name="create_penaltyType_btn" id="create_penaltyType_btn">Add Penalty Type</button>
     </div>
  </div>
</div>