@model MLS_Digital_Management_System_Front_End.Core.DTOs.LevyPercent.CreateLevyPercentDTO;
<!-- Modal -->

<div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create Percentage</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
              <label asp-for="PercentageValue" class="form-label"></label>
              <input asp-for="PercentageValue" type="number" step="1" placeholder="Enter Percentage" class="form-control" />
              <span asp-validation-for="PercentageValue" class="text-danger"></span>
            </div>
        </form>
      </div>
      <div class="modal-footer">
         <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" id="create_levyPercent_btn" name="create_levyPercent_btn">Submit</button>
            <div>
                <img src="~/assets/images/91.gif" id="spinner" />
            </div>
      </div>
    </div>
  </div>
