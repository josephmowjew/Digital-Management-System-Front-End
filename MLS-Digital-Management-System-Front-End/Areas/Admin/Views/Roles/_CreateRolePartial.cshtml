@model MLS_Digital_Management_System_Front_End.Core.DTOs.Role.CreateRoleDTO;
<!-- Modal -->


<div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create Role</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DataInvalid" />
            <div class="row row-cols-lg-2">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" placeholder="Enter Role Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
               
            </div>
        </form>
      </div>
      <div class="modal-footer">
         <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" id="create_role_btn" name="create_role_btn">Create Role</button>
            
      </div>
    </div>
  </div>

