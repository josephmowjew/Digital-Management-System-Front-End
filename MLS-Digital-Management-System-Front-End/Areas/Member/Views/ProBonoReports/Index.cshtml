@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Pro Bono Applications";
    Layout = "~/Areas/Member/Views/shared/_Layout.cshtml";

     var host = Configuration.GetSection("APIURL")["Link"];
}

@section Styles {

    <link href="~/assets/css/custom_select.css" rel="stylesheet" />
}


<div class="card  w-100 h-100 d-flex justify-content-center">
    <div class="card-body">
        
       
        <h5 class="card-title fw-semibold mb-4 text-uppercase">Reports On Pro Bonos</h5>
       
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="my_table">
                <thead>
                    <tr>
                         <th>
                           Pro Bono ID
                        </th>
                        <th>
                            Report Status
                        </th>
                        <th>
                            Proposed Hours
                        </th>
                        <th>
                            Approved Hours
                        </th>
                          <th>
                            Description
                        </th>
                        
                        <th>
                            Attachments
                        </th>
                        
                       

                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>


       @section Scripts{

        <script>
            var datatable;
            var tokenValue = '@ViewBag.token';
        </script>

        
        <script src="~/assets/js/custom_select.js" asp-append-version="true"></script>
        <script>
            $(document).ready(function () {
                datatable = $('#my_table').DataTable({


                    "processing": true,
                    "serverSide": true,
                    "order": [[0, "desc"]],
                    ajax: {
                    url: "@host/api/ProBonoReports/paged?probonoId="+@ViewBag.probonoId,
                        type: 'get',
                        datatype: 'Json',headers: {
                                        'Authorization': 'Bearer @ViewBag.token'
                                    },
                                  

                  },
                    columnDefs: [
                        {
                            defaultContent: "",
                            targets: "_all",
                            'orderable': true
                        },
                    ],
                   columns: [

                        {
                            data: "proBono.fileNumber",
                            name: "proBono.fileNumber",
                            className: "text-left",
                            "orderable": false,
                        },

                        {
                            data: "reportStatus",
                            name: "reportStatus",
                            className: "text-left",
                            "orderable": true,
                        },
                        {
                            data: "proBonoProposedHours",
                            name: "proBonoProposedHours",
                            className: "text-left",
                            "orderable": false,
                        },
                        {
                            data: "proBonoHours",
                            name: "proBonoHours",
                            className: "text-left",
                            "orderable": false,
                        },
                         {
                            data: "description",
                            name: "description",
                            className: "text-left",
                            "orderable": false,
                        },

                        {
                        data: "attachments",
                        name: "attachments",
                        className: "text-left",
                        "orderable": true,
                        render: function(data, type, row, meta) {
                            if (data && data.length > 0) {
                            return data.map((attachment) => {
                                return `<a href="@host/${attachment.filePath}" download="${attachment.fileName}" class='ti ti-download btn btn-outline-info'> ${attachment.fileName}</a>`;
                            }).join('<br>');
                            } else {
                            return '';
                            }
                        }
                        }
                       
                        ],                    responsive: true,
                    "autoWidth": false,
                });
            });
        </script>

        


            @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        }