@model MLS_Digital_Management_System_Front_End.Core.DTOs.Communication.SendMessageDTO

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Send New Message</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form asp-action="create" id="sendMessageForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label for="Subject" class="control-label">Subject</label>
                    <input id="Subject" name="Subject" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label for="Body" class="control-label">Body</label>
                    <textarea id="Body" name="Body" class="form-control" rows="5" required></textarea>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="SendToAllUsers" name="SendToAllUsers">
                            <label class="form-check-label" for="SendToAllUsers">
                                Send to All Users
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="attachDocument" name="attachDocument">
                            <label class="form-check-label" for="attachDocument">
                                Attach Document
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="includeSignature" name="includeSignature">
                            <label class="form-check-label" for="includeSignature">
                                Include personal signature
                            </label>
                        </div>
                        <div id="signaturePreview" class="mt-2" style="display: none;">
                            <!-- Signature will be inserted here -->
                        </div>
                    </div>
                </div>

               <div id="attachmentInput">
                    <div class="mb-3">
                        <input class="form-control custom-file-input" 
                               id="attachments" 
                               name="attachments" 
                               type="file" 
                               multiple
                               accept=".pdf,.doc,.docx,.xls,.xlsx,.txt,.jpg,.jpeg,.png">
                    </div>
                </div>

                <div id="targetOptions">
                    <div class="mb-3">
                        <label for="DepartmentIds" class="control-label">Departments</label>
                        <select id="DepartmentIds" name="DepartmentIds" class="form-control select2" multiple
                            asp-items="@ViewBag.Departments">
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="RoleNames" class="control-label">Roles</label>
                        <select id="RoleNames" name="RoleNames" class="form-control select2" multiple
                            asp-items="@ViewBag.Roles">
                        </select>
                    </div>
                </div>
            </form>
            <div id="processingMessage" class="alert alert-info mt-3" style="display: none;">
                <div class="spinner-border spinner-border-sm me-2" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                Processing your request...
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" id="send_message_btn">Send Message</button>
        </div>
    </div>
</div>