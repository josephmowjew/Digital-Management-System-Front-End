@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Secretariat/Views/shared/_Layout.cshtml";
}

<div class="card">
            <div class="card-body">
                <h4 class="card-title text-center">Stats For 2024 - 2025 Year</h4>
                <div class="row mt-4">
                    <!-- Column -->
                    <div class="col-md-6 col-lg-3 col-xlg-3">
                        <a asp-area="Secretariat" asp-controller="LicenseApplications" asp-action="Index" aria-expanded="false">
                            <div class="card card-hover">
                                <div class="p-2 rounded bg-light-primary text-center">
                                    <h1 class="fw-light text-primary">@ViewBag.totalLicenseApplications</h1>
                                    <p class="text-primary">Licence Applications</p> 
                                </div>
                            </div>
                        </a>
                    </div>
                    <!-- Column -->
                    <div class="col-md-6 col-lg-3 col-xlg-3">
                        <a asp-area="Secretariat" asp-controller="ProBonos" asp-action="Index" aria-expanded="false">
                            <div class="card card-hover">
                                <div class="p-2 rounded bg-light-danger text-center">
                                    <h1 class="fw-light text-danger">@ViewBag.proBonos</h1>
                                    <h6 class="text-danger">Pro Bono Cases Registered</h6>
                                </div>
                            </div>
                        </a>
                    </div>
                    <!-- Column -->
                    <div class="col-md-6 col-lg-3 col-xlg-3">
                        <a asp-area="Secretariat" asp-controller="ProBonoClients" asp-action="Index" aria-expanded="false">
                            <div class="card card-hover">
                                <div class="p-2 rounded bg-light-success text-center">
                                    <h1 class="fw-light text-success">@ViewBag.clientsCount</h1>
                                    <h6 class="text-success">Clients</h6>
                                </div>
                            </div>
                        </a>
                    </div>
                    <!-- Column -->
                    <div class="col-md-6 col-lg-3 col-xlg-3">
                        <a asp-area="Secretariat" asp-controller="Committees" asp-action="Index" asp-route-type="Re-opened" aria-expanded="false">
                            <div class="card card-hover">
                                <div class="p-2 rounded bg-light-warning text-center">
                                    <h1 class="fw-light text-warning">@ViewBag.committeesCount</h1>
                                    <h6 class="text-warning">Active Committees</h6>
                                </div>
                            </div>
                        </a>
                    </div>
                   
                    <!-- Column -->
                </div>

            </div>
</div>