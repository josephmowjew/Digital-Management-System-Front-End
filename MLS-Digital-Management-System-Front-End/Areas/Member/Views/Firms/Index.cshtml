@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Firms";
    Layout = "~/Areas/Member/Views/shared/_Layout.cshtml";

     var host = Configuration.GetSection("APIURL")["Link"];
}



<div class="card">
    <div class="card-body">
         <div>
            <img src="~/assets/images/91.gif" id="spinner" />
        </div>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-info my-3" data-bs-toggle="modal" data-bs-target="#create_firm_modal">
            Create Firm
        </button>

        <!-- Modal -->
        <div class="modal fade" id="create_firm_modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <partial name="_CreateFirmPartial" />
        </div>

        <div class="modal fade" id="edit_firm_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <partial name="_EditFirmPartial" />
        </div>

        <h5 class="card-title fw-semibold mb-4 text-uppercase">Available Active Firms</h5>
       
        <div class="table-responsive">
            <table class="table table-bordered " id="my_table">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Postal Address
                        </th>
                        <th>
                            Physical Address
                        </th>
                        <th>
                            Primary Contact Person
                        </th>
                        <th>
                            Primary Phone Number
                        </th>
                        <th>
                            Secondary Contact Person
                        </th>
                        <th>
                            Secondary Phone Number
                        </th>
                         <th>
                            Status
                        </th>
                        <th>
                            Action
                        </th>

                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>


       @section Scripts{

        <script>
            var datatable;
            var tokenValue = '@ViewBag.token';
        </script>

        <script src="~/js/Firm.js" asp-append-version="true"></script>
        <script>
            $(document).ready(function () {
                datatable = $('#my_table').DataTable({


                    "processing": true,
                    "serverSide": true,
                    "order": [[0, "desc"]],
                    ajax: {
                    url: "@host/api/Firms/paged",
                        type: 'get',
                        datatype: 'Json',headers: {
                                        'Authorization': 'Bearer @ViewBag.token'
                                    },


                  },
                    columnDefs: [
                        {
                            defaultContent: "",
                            targets: "_all",
                            'orderable': true
                        },
                    ],
                    columns: [
                        {
                            data: "name",
                            name: "name",
                            className: "text-left",
                            "orderable": true,
                        },                      
                           {
                            data: "postalAddress",
                            name: "postalAddress",
                            className: "text-left",
                            "orderable": true,
                        },
                           {
                            data: "physicalAddress",
                            name: "physicalAddress",
                            className: "text-left",
                            "orderable": true,
                        },
                           {
                            data: "primaryContactPerson",
                            name: "primaryContactPerson",
                            className: "text-left",
                            "orderable": true,
                        },
                           {
                            data: "primaryPhoneNumber",
                            name: "primaryPhoneNumber",
                            className: "text-left",
                            "orderable": true,
                        },
                           {
                            data: "secondaryContactPerson",
                            name: "secondaryContactPerson",
                            className: "text-left",
                            "orderable": true,
                        },
                           {
                            data: "secondaryPhoneNumber",
                            name: "secondaryPhoneNumber",
                            className: "text-left",
                            "orderable": true,
                        },
                        {
                            data: "status",
                            name: "status",
                            className: "text-left",
                            "orderable": false,
                        },
                        {
                        data: "id",
                        name: "id",
                        "orderable": false,
                        render: function (data, type, row) {
                            if (row.status.toLowerCase() === "pending") {
                                return "<a href='#' onclick='EditForm(\"" + data + "\",\"" + tokenValue + "\")' type='button' class='btn btn-outline-primary mx-1 btn-sm ti ti-pencil text-lg' title='edit' >Edit</a><a href='#' type='button' onclick='Delete(\"" + data + "\",\"" + tokenValue + "\")' title='delete' class='btn btn-outline-danger my-1 btn-sm ti ti-trash red-icon' >Delete</a>"
                            } else {
                                return "";
                            }
                        }
                    }
                    ],
                    responsive: true,
                    "autoWidth": false,
                });
            });
        </script>

            @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        }